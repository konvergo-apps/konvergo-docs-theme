{
  "name": "konvergo-docs-theme",
  "version": "0.1.0-1",
  "description": "GROWI plugin for the Konvergo theme",
  "license": "MIT",
  "main": "dist/libs/index.js",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "vite build",
    "build:w": "yarn build -w",
    "test": "vitest run"
  },
  "dependencies": {},
  "devDependencies": {
    "@growi/core-styles": "^1.0.0",
    "@growi/pluginkit": "^1.0.0",
    "@types/node": "^20.12.13",
    "bootstrap": "^5.3.3",
    "husky": "^9.0.11",
    "npm-run-all": "^4.1.5",
    "sass": "^1.77.2",
    "vite": "^5.2.11",
    "vitest": "^1.6.0"
  },
  "growiPlugin": {
    "schemaVersion": "4",
    "types": [
      "theme"
    ],
    "themes": [
      {
        "name": "Konvergo",
        "manifestKey": "src/styles/style.scss",
        "schemeType": "light",
        "lightBg": "#F9E4EB",
        "darkBg": "#EC0B4333",
        "lightSidebar": "#242930",
        "darkSidebar": "#242930",
        "lightIcon": "#FAFCFE",
        "darkIcon": "#FAFCFE",
        "createBtn": "#EB0B43"
      }
    ]
  }
}
