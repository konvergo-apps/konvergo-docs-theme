{
  "name": "konvergo-docs-theme",
  "version": "1.0.0",
  "description": "GROWI plugin for the Konvergo theme",
  "main": "dist/libs/index.js",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "vite build",
    "build:w": "yarn build -w",
    "lint:styles": "stylelint src/**/*.scss",
    "lint": "run-p lint:*",
    "test": "vitest run"
  },
  "devDependencies": {
    "@growi/core-styles": "^1.0.0",
    "@growi/pluginkit": "^1.0.0",
    "@types/node": "^20.12.13",
    "bootstrap": "^4.6.1",
    "husky": "^9.0.11",
    "prettier": "^3.3.2",
    "sass": "^1.55.0",
    "stylelint": "^16.6.1",
    "stylelint-config-recess-order": "^5.0.1",
    "stylelint-config-standard-scss": "^13.1.0",
    "vite": "^3.2.5",
    "vitest": "^1.6.0"
  },
  "growiPlugin": {
    "schemaVersion": "4",
    "types": [
      "theme"
    ],
    "themes": [
      {
        "name": "Konvergo",
        "manifestKey": "src/styles/style.scss",
        "schemeType": "light",
        "lightBg": "#EEEFF2",
        "darkBg": "#D1D3DB",
        "lightSidebar": "#F3CD88",
        "darkSidebar": "#1F2128",
        "lightIcon": "#1F2128",
        "darkIcon": "#EBB845",
        "createBtn": "#1F2128"
      }
    ]
  }
}